<PageTitle @title={{concat this.model.brand ": " this.model.name}} />

<div class="column detail-container">
	<div class="row">
		<div class="gallery">
			<img src={{this.model.artwork.firstObject}} alt={{concat this.model.brand " - " this.model.name}}>
		</div>

		<div class="description">
			<p class="price">${{this.model.price}} USD</p>
			{{#if this.model.description}}
				<p>
					{{this.model.description}}
				</p>
			{{/if}}
			
			<button
				{{on "click" (action this.cartManager.add this.model 1) }} 
				class="btn btn-primary"
			>
				add to cart
			</button>
		</div>
	</div>
	
</div>